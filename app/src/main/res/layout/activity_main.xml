<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        style="@style/MyCustomTabLayout"
        android:id="@+id/activity_main_tabbed_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
    /><!-- android:minHeight="?attr/actionBarSize"
     android:minHeight="?android:attr/actionBarSize"
     http://stackoverflow.com/questions/31082816/how-to-set-android-toolbar-height
     -->
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_tabbed_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_main_tabbed_tab_layout"/>

</LinearLayout>
